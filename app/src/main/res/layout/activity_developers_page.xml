<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141617"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/backbutton_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="200dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@android:color/transparent">

            <!-- Use a vertical LinearLayout to stack TextView and Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d32f2f"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/developers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_boldcondensed"
                        android:gravity="center"
                        android:text="Meet the Developers"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/home_button"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:alpha="0.5"
                            android:background="?attr/selectableItemBackground"
                            android:fontFamily="@font/roboto_condensed"
                            android:text="Home"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / "
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/developers_button"
                            android:layout_width="79dp"
                            android:layout_height="20dp"
                            android:background="?attr/selectableItemBackground"
                            android:fontFamily="@font/roboto_boldcondensed"
                            android:text="Developers"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="13dp"
                app:cardBackgroundColor="#d32f2f">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/profile_icon_salonga"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/developers_icon" />

                    <TextView
                        android:id="@+id/salonga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Andre D. Salonga"
                        android:textSize="17.7sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_boldcondensed" />

                    <LinearLayout
                        android:id="@+id/socmed_buttons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/facebook_salonga"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/facebook_icon"/>

                        <Button
                            android:id="@+id/instagram_salonga"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/instagram_icon"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="13dp"
                app:cardBackgroundColor="#d32f2f">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/profile_icon_quirante"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/developers_icon" />

                    <TextView
                        android:id="@+id/quirante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zilfa Edz R. Quirante"
                        android:textSize="17.7sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_boldcondensed" />

                    <LinearLayout
                        android:id="@+id/socmed_buttons2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/facebook_quirante"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/facebook_icon"/>

                        <Button
                            android:id="@+id/instagram_quirante"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/instagram_icon"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/bio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="About the Team"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/roboto_boldcondensed"/>

        <TextView
            android:id="@+id/about_the_team"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/description1"
            android:justificationMode="inter_word"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.2"/>

        <TextView
            android:id="@+id/about_the_team2"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/description2"
            android:justificationMode="inter_word"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>
</ScrollView>
