<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:backgroundTint="@color/blackish">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_background"/>

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="260dp"
                android:fontFamily="@font/roboto_boldcondensed"
                android:letterSpacing="0.05"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <View
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="4dp"
                android:background="#b71c1c" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_bold"
                android:text="First Name"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/firstname"
                style="@style/EditText.Login"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_outline"
                android:fontFamily="@font/roboto_condensed"
                android:hint="Enter first name"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="#808080"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Last Name"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/lastname"
                style="@style/EditText.Login"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_outline"
                android:fontFamily="@font/roboto_condensed"
                android:hint="Enter last name"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="#808080"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/email_edit"
                style="@style/EditText.Login"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_outline"
                android:fontFamily="@font/roboto_condensed"
                android:hint="Enter email"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="#808080"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_password"
                style="@style/EditText.Login"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_outline"
                android:fontFamily="@font/roboto_condensed"
                android:hint="Enter password"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="#808080"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rule_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_condensed"
                android:text="* At least 8 characters"
                android:textColor= "#BFFFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/rule_uppercase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_condensed"
                android:text="* At least 1 uppercase letter"
                android:textColor= "#BFFFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/rule_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_condensed"
                android:text="* At least 1 number"
                android:textColor= "#BFFFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/rule_special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_condensed"
                android:text="* At least 1 special character"
                android:textColor= "#BFFFFFFF"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Confirm password"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_confirmpassword"
                style="@style/EditText.Login"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_outline"
                android:fontFamily="@font/roboto_condensed"
                android:hint="Re-enter password"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="#808080"
                android:textSize="15sp" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:background="@drawable/button_rounded2"
                android:fontFamily="@font/roboto_bold"
                android:text="Sign Up" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed"
                    android:text="Already have an account?"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/signin_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@color/blackish"
                    android:fontFamily="@font/roboto_boldcondensed"
                    android:stateListAnimator="@null"
                    android:text="Sign In!"
                    android:textAllCaps="false"
                    android:textColor="#b71c1c" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>